  <body>
  
    <section class="cart">
      <div class="cart-container">
        <h1>Your Cart</h1>
        <hr>
        <div id="cart-items">
          <% if (cart && cart.length > 0) { %>
            <% cart.forEach((item, index) => { %>
              <div class="cart-item">
                <img src="<%= item.product_image %>" width="50">
                <h5 class="book-title"><%= item.product_name %></h5>
                <span class="cart-author">By: <%= item.product_author %></span>
                <p>Price: <span> $<%= item.product_price %></span></p>
                <p>Quantity: <%= item.quantity %></p>
          
                <div class="delete-btn">
                  <form action="/delete_cart" method="POST">
                    <input type="hidden" name="index" value="<%= index %>">
                    <button type="submit"><i class="bi bi-trash" title="Delete"></i>
                  </form>
                </div>
                
              </div>
            <% }) %>
          <% } else { %>
            <p>Your cart is empty.</p>
          <% } %>

          <div class="total-price">
            <h3 >Total: $<span id="total"><%= total %></span></h3>
          </div>
        
            <div class="place-button">    
                <div class="order-section">
                  <form method="post" action="/place_order">
                
                    <div class="place-order">
                      <button type="submit">Place Order</button>
                    </div>
                    
                  </form>
                </div>
              </div>      
          </div>
      </div>

      <% if (placeMessage) { %>
        <div class="alert alert-success alert-dismissible fade show position-fixed top-50 start-50 translate-middle-x mt-3" >
          <%= placeMessage %>
        </div>
      <% } %>
      
    </section>
 
  
